<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/white"

    android:orientation="vertical">
    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/iv_headline_listitem1"
        android:src="@mipmap/text_list_interalbig"
        android:scaleType="fitXY"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="15dp"/>
    <TextView
        android:layout_width="35dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:id="@+id/tv_headline_listitem1_new"
        android:layout_alignTop="@+id/iv_headline_listitem1"
        android:layout_toRightOf="@+id/iv_headline_listitem1"
        android:layout_marginLeft="5dp"
        android:text="新品"
        android:background="@drawable/bg_invite"
        android:textColor="@color/orangered"/>
    <TextView
        android:layout_width="200dp"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:id="@+id/tv_headline_listitem1_name"
        android:layout_alignTop="@+id/iv_headline_listitem1"
        android:layout_toRightOf="@id/tv_headline_listitem1_new"
        android:text="新款羽绒夹克"
        android:layout_marginLeft="@dimen/margin_icon_left"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="来自社区超市"
        android:textSize="10sp"
        android:clickable="true"
        android:textColor="@color/blue_light"
        android:background="@color/grey"
        android:layout_marginTop="50dp"
        android:id="@+id/tv_headline_listitem1_from"
        android:layout_marginRight="@dimen/margin_icon_left"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_headline_listitem1"
        android:layout_marginLeft="5dp"
        android:layout_alignBottom="@id/tv_headline_listitem1_from"
        android:id="@+id/tv_headline_listitem1_price"
        android:textColor="@color/orangered"
        android:text="288888"/>
