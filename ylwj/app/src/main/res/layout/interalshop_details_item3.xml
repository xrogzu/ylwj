<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_icon_left"
        android:layout_marginTop="@dimen/margin_icon_left20">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/red_heart" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_icon_left5"
            android:text="猜您喜欢"
            android:textSize="13sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_icon_left"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginLeft="@dimen/margin_icon_left"
            android:layout_width="0dp"

            android:background="@color/white"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/text_list_inetralshop"/>
            <TextView
                android:layout_width="100dp"
                android:layout_marginTop="@dimen/margin_icon_left5"
                android:text="乐町韩版轻薄羽绒服"
                android:singleLine="true"
                android:textSize="11sp"
                android:layout_marginLeft="@dimen/margin_icon_left"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/margin_icon_left5"
                android:text="￥540.00"
                android:textColor="@color/orangered"
                android:layout_marginLeft="@dimen/margin_icon_left"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/margin_icon_left"
            android:layout_width="0dp"
            android:background="@color/white"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/text_list_inetralshop"/>
            <TextView
                android:layout_width="100dp"
                android:layout_marginTop="@dimen/margin_icon_left5"
                android:text="乐町韩版轻薄羽绒服"
                android:singleLine="true"
                android:textSize="11sp"
                android:layout_marginLeft="@dimen/margin_icon_left"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/margin_icon_left5"
                android:text="￥540.00"
                android:textColor="@color/orangered"
                android:layout_marginLeft="@dimen/margin_icon_left"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/margin_icon_left"
            android:layout_marginRight="@dimen/margin_icon_left"
            android:layout_width="0dp"
            android:background="@color/white"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/text_list_inetralshop"/>
            <TextView
                android:layout_width="100dp"
                android:layout_marginTop="@dimen/margin_icon_left5"
                android:text="乐町韩版轻薄羽绒服"
                android:singleLine="true"
                android:textSize="11sp"
                android:layout_marginLeft="@dimen/margin_icon_left"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/margin_icon_left5"
                android:text="￥540.00"
                android:textColor="@color/orangered"
                android:layout_marginLeft="@dimen/margin_icon_left"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>