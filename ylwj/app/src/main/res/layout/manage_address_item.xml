<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:background="@mipmap/address_listitem_bg"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_manage_address_item_rec_person"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="收货人："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          />

        <TextView
            android:id="@+id/phone"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="18636998521"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/tv_manage_address_item_rec_person"/>


    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_manage_address_item_rec_person"
        android:layout_alignLeft="@+id/tv_manage_address_item_rec_person">
    <TextView
        android:id="@+id/tv_manage_address_item_default_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[默认]"
        android:textSize="13sp"
        android:textColor="@color/red"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/tv_manage_address_item_rec_address"
        android:textSize="13sp"
        android:text="接收地址"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_manage_address_item_default_add"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/tv_manage_address_item_default_add"
        />
    </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:background="@color/grey"
        android:layout_height="1px"/>
    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:layout_alignParentLeft="true"
            android:id="@+id/rb_manage_address_item_set_default_addr"
            android:drawableLeft="@drawable/checkbox_style"
            android:button="@null"
            android:drawablePadding="3dp"
            android:text="设为默认地址"
            android:textColor="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_address_button"
            android:layout_marginLeft="8dp"
            android:src="@mipmap/button_address_delete"
            android:id="@+id/ib_manage_address_item_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/ib_manage_address_item_edit"
            android:src="@mipmap/button_address_edit"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/bg_address_button"
            android:layout_toLeftOf="@+id/ib_manage_address_item_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>


</LinearLayout>