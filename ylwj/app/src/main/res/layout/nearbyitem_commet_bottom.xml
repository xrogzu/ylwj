<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_icon_left"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@color/white"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/margin_icon_left5"
        android:background="@color/lightlightgrey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/linear_item_share"
            android:clickable="true"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/shenjbian_icon11" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="转发"
                android:textSize="16sp"
                android:paddingLeft="5dp"
                android:id="@+id/tv_shareNum" />
        </LinearLayout>
        <TextView
            android:layout_width="1px"
            android:background="@color/lightlightgrey"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/linear_item_comment"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/shenjbian_icon12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:textSize="16sp"
                android:text="评论"
                android:id="@+id/tv_recommentNum" />
        </LinearLayout>
        <TextView
            android:layout_width="1px"
            android:background="@color/lightlightgrey"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/linear_item_praise"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:id="@+id/iv_like"
                android:background="@mipmap/icon_love" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:textSize="16sp"
                android:text="喜欢"
                android:id="@+id/tv_praiseNum" />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/lightlightgrey"
        />


</LinearLayout>