<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ghostwhite"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/confirm_order_header"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/confirm_order_back"
            android:padding="15dp"
            android:background="@android:color/transparent"
            android:src="@mipmap/reback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="确认订单"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <include
        android:layout_marginTop="10dp"
        android:layout_below="@id/confirm_order_header"
        android:id="@+id/confirmorder_userinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/confirmorder_userinfo"/>
    <ScrollView
        android:layout_marginTop="10dp"
        android:layout_below="@id/confirmorder_userinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/confirmorder_orderinfo"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"/>
    </ScrollView>
    <include layout="@layout/confirm_order_bottom"
             android:layout_alignParentBottom="true"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"/>
</RelativeLayout>
