<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <ScrollView
        android:id="@+id/register_community_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:clickable="true"
                android:id="@+id/rl_community_provice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/line_top1"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginBottom="@dimen/margin_icon_left"
                    android:layout_marginTop="@dimen/margin_icon_left"
                    android:background="@color/grey"
                    android:orientation="horizontal" />

                <TextView
                    android:id="@+id/tv_community1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line_top1"
                    android:layout_marginBottom="@dimen/margin_icon_left"
                    android:layout_marginLeft="@dimen/margin_icon_left5"
                    android:text="@string/province"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/next_gray" />

                <LinearLayout
                    android:id="@+id/line_bottom1"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/tv_community1"
                    android:layout_marginBottom="@dimen/margin_icon_left"
                    android:background="@color/grey"
                    android:orientation="horizontal" />
            </RelativeLayout>

            <RelativeLayout
                android:clickable="true"
                android:id="@+id/rl_community_street"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/line_top2"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginBottom="@dimen/margin_icon_left"
                    android:layout_marginTop="@dimen/margin_icon_left"
                    android:background="@color/grey"
                    android:orientation="horizontal" />

                <TextView
                    android:id="@+id/tv_community2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line_top2"
                    android:layout_marginBottom="@dimen/margin_icon_left"
                    android:layout_marginLeft="@dimen/margin_icon_left5"
                    android:text="@string/street"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/next_gray" />

                <LinearLayout
                    android:id="@+id/line_bottom2"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/tv_community2"
                    android:layout_marginBottom="@dimen/margin_icon_left"
                    android:background="@color/grey"
                    android:orientation="horizontal" />
            </RelativeLayout>

            <RelativeLayout
                android:clickable="true"
                android:id="@+id/rl_community_community"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/line_top3"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginBottom="@dimen/margin_icon_left"
                    android:layout_marginTop="@dimen/margin_icon_left"
                    android:background="@color/grey"
                    android:orientation="horizontal" />

                <TextView
                    android:id="@+id/tv_community3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line_top3"
                    android:layout_marginBottom="@dimen/margin_icon_left"
                    android:layout_marginLeft="@dimen/margin_icon_left5"
                    android:text="@string/community"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/next_gray" />

                <LinearLayout
                    android:id="@+id/line_bottom3"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/tv_community3"
                    android:layout_marginBottom="@dimen/margin_icon_left"
                    android:background="@color/grey"
                    android:orientation="horizontal" />
            </RelativeLayout>

            <Button
                android:id="@+id/community_commplete_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/padding_top_hotproduct"
                android:background="@drawable/login_bg"
                android:text="完成注册"
                android:textColor="@color/white"
                android:textSize="@dimen/text_login"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_icon_left5"
                    android:text="注册表示您同意"
                    android:textColor="@color/darkgrey" />
                <TextView
                    android:clickable="true"
                    android:id="@+id/tv_agreement"
                    android:layout_marginTop="@dimen/margin_icon_left5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="易联万家用户注册协议"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
