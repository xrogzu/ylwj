<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_header_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <ImageView
        android:id="@+id/pop_image"
        android:src="@mipmap/top_banner_android"
        android:scaleType="fitXY"
        android:background="@drawable/image_background"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="20dp"
        android:layout_width="130dp"
        android:layout_height="130dp"/>
    <TextView
        android:id="@+id/pop_name"
        android:text="哈哈"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/pop_image"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/pop_price"
        android:text="￥99"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/orangered"
        android:layout_toRightOf="@id/pop_image"
        android:layout_below="@id/pop_name"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/pop_my_credit"
        android:text="￥99"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:visibility="gone"
        android:textColor="@color/orangered"
        android:layout_toRightOf="@id/pop_image"
        android:layout_below="@id/pop_price"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/pop_stock"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:text="库存 149"
        android:layout_alignLeft="@id/pop_price"
        android:layout_toRightOf="@id/pop_image"
        android:layout_below="@id/pop_my_credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <!--<TextView-->
        <!--android:id="@+id/pop_choice_result"-->
        <!--android:textSize="16sp"-->
        <!--android:textColor="@color/black"-->
        <!--android:text="请选择 颜色分类"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:layout_toRightOf="@id/pop_image"-->
        <!--android:layout_alignLeft="@id/pop_price"-->
        <!--android:layout_below="@id/pop_stock"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"/>-->
    <ImageView
        android:id="@+id/pop_dismiss_iv"
        android:src="@mipmap/vote_delete"
        android:layout_alignParentRight="true"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:layout_margin="@dimen/ui_10_dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>