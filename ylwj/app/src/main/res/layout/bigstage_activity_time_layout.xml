<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="活动时间:"
        android:textColor="@color/black" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal">
        <TextView
            android:text="开始时间："
            android:textColor="@color/activity_tvcolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/bigstage_activity_start_year"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:inputType="datetime"
            android:gravity="center"
            android:textColor="@color/gray"
            android:background="@drawable/edittext_background_gray"/>
        <TextView
            android:text=" 年 "
            android:textColor="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/bigstage_activity_start_month"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:inputType="datetime"
            android:gravity="center"
            android:textColor="@color/gray"
            android:background="@drawable/edittext_background_gray"/>
        <TextView
            android:text=" 月 "
            android:textColor="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/bigstage_activity_start_day"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:inputType="datetime"
            android:gravity="center"
            android:textColor="@color/gray"
            android:background="@drawable/edittext_background_gray"/>
        <TextView
            android:text=" 日 "
            android:textColor="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal">
        <TextView
            android:text="截止时间："
            android:textColor="@color/activity_tvcolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/bigstage_activity_end_year"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:inputType="datetime"
            android:gravity="center"
            android:textColor="@color/gray"
            android:background="@drawable/edittext_background_gray"/>
        <TextView
            android:text=" 年 "
            android:textColor="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/bigstage_activity_end_month"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:inputType="datetime"
            android:gravity="center"
            android:textColor="@color/gray"
            android:background="@drawable/edittext_background_gray"/>
        <TextView
            android:text=" 月 "
            android:textColor="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/bigstage_activity_end_day"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:inputType="datetime"
            android:gravity="center"
            android:textColor="@color/gray"
            android:background="@drawable/edittext_background_gray"/>
        <TextView
            android:text=" 日 "
            android:textColor="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</LinearLayout>