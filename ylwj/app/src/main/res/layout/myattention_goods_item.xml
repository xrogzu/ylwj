<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:id="@+id/ll_myattention_goods_item_click"
    android:clickable="true"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_myattention_goods_item_pic"
        android:src="@mipmap/text_list_inetralshop"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center_vertical"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_myattention_goods_item_name"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:text="乐町长款轻薄羽绒服"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/ll_myattention_goods_item"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_myattention_goods_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_myattention_goods_item_jifen"
                android:layout_marginTop="16dp"
                android:text="22222"
                android:textSize="20sp"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="积分"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_myattention_goods_item_selled"
            android:layout_below="@+id/ll_myattention_goods_item"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="5dp"
            android:text="已售200件"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/tv_myattention_goods_item_selled"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/car_delete"
            android:background="@color/white"
            android:id="@+id/ib_myattention_goods_item_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

</LinearLayout>