<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.library.listview.XListView
        android:id="@+id/listview_address"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:divider="@color/transparent"
        android:dividerHeight="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:id="@+id/empty_address_rl"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:visibility="gone"
        android:background="@drawable/no_address_background">
        <ImageView
            android:id="@+id/add_address_iv"
            android:layout_centerInParent="true"
            android:src="@mipmap/new_address_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</LinearLayout>