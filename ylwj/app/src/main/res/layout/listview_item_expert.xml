<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="#E8E8E8"
    android:orientation="horizontal"
    >

   <RelativeLayout
       android:id="@+id/expert_list_left"
       android:layout_width="0dp"
       android:layout_height="110dp"
       android:gravity="center_vertical"
       android:layout_weight="1"
       android:layout_marginLeft="12dp"
       android:background="@drawable/view_yuan">
       <ImageView
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:id="@+id/iv_expert_left"
           android:layout_centerVertical="true"
           android:layout_margin="10dp"
           android:src="@mipmap/head_expert"/>
       <ImageView
           android:layout_alignLeft="@+id/iv_expert_left"
           android:layout_below="@+id/iv_expert_left"
           android:id="@+id/iv_seal_left"
           android:src="@mipmap/seal_expert"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_expertname_left"
            android:layout_toRightOf="@id/iv_expert_left"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="郎咸平"
            android:layout_alignTop="@+id/iv_expert_left"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="3dp"
           android:layout_alignLeft="@id/tv_expertname_left"
           android:layout_below="@+id/tv_expertname_left"
           android:id="@+id/tv_expertposition_left"
           android:text="金融理财"
           android:textSize="12sp"/>
       <ImageButton
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/ib_expert_left"
           android:layout_alignParentBottom="true"
           android:layout_marginRight="10dp"
           android:layout_marginBottom="5dp"
           android:layout_alignParentRight="true"
           android:background="@drawable/bg_phone_expert"/>
   </RelativeLayout>
    <RelativeLayout
        android:id="@+id/expert_list_right"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/view_yuan">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/iv_expert_right"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:src="@mipmap/head_expert"/>
        <ImageView
            android:layout_alignLeft="@+id/iv_expert_right"
            android:layout_below="@+id/iv_expert_right"
            android:id="@+id/iv_seal_right"
            android:src="@mipmap/seal_expert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_expertname_right"
            android:layout_toRightOf="@id/iv_expert_right"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="郎咸平"
            android:layout_alignTop="@+id/iv_expert_right"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_alignLeft="@id/tv_expertname_right"
            android:layout_below="@+id/tv_expertname_right"
            android:id="@+id/tv_expertposition_right"
            android:text="金融理财"
            android:textSize="12sp"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ib_expert_right"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_phone_expert"/>
    </RelativeLayout>

</LinearLayout>