<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffe8e8e8"
    android:orientation="vertical">

    <include layout="@layout/title_integralshop" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/darkgrey" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@mipmap/jingzhi_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/view_yuan"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            >

            <ImageView
                android:id="@+id/my_card_head"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="15dp"
                android:layout_marginLeft="@dimen/margin_icon_left"
                android:layout_marginTop="3dp"
                android:src="@mipmap/touxiang" />

            <TextView
                android:id="@+id/my_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/my_card_head"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/my_card_head"
                android:text="闽江路小米"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:layout_toRightOf="@+id/my_card_head"
                android:layout_below="@+id/my_card_name"
                android:layout_marginTop="5dp"
                android:layout_alignLeft="@+id/my_card_name"
                android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scan_nearby_map"
                android:src="@mipmap/shenbian_icon_07"

                />
            <TextView
                android:id="@+id/scan_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="13sp"
/>
            </LinearLayout>
            <ImageView
                android:id="@+id/scan_homepage_sex_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/my_card_name"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/my_card_name"
                android:src="@mipmap/wd_icon_woman" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_margin="50dp"
            android:background="@drawable/view_yuan_scan"

          >
        <ImageView
            android:id="@+id/my_card_qr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:src="@mipmap/top_banner_android" />
        </LinearLayout>
        <TextView
            android:id="@+id/ceshi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="扫一扫二维码，关注我吧"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>