<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@mipmap/text_bigstage_card"
            android:id="@+id/iv_back"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:id="@+id/rl_headback"
                android:background="#a333"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_normal_details_head"
                    android:layout_width="110dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="@dimen/margin_icon_left"
                    android:scaleType="fitXY"
                    android:src="@mipmap/text_bigstage_card" />

                <TextView
                    android:id="@+id/tv_normal_details_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/iv_normal_details_head"
                    android:layout_marginLeft="@dimen/margin_icon_left"
                    android:layout_toRightOf="@+id/iv_normal_details_head"
                    android:text="鲍岛社区扑克派对"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <LinearLayout
                    android:id="@+id/linear_normal_details_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_normal_details_name"
                    android:layout_below="@+id/tv_normal_details_name"
                    android:layout_marginTop="@dimen/margin_icon_left20"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_organization" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="易联万家组委会"
                        android:textColor="@color/white"
                        android:id="@+id/tv_normal_details_location" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_normal_details_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_normal_details_name"
                    android:layout_below="@+id/linear_normal_details_location"
                    android:layout_marginTop="@dimen/margin_icon_left"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_details_time" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="2016.01.22 10:00 - 2016.01.22 10:00"
                        android:textColor="@color/white"
                        android:id="@+id/tv_normal_details_time" />
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_details_tickets" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_icon_left5"
                        android:text="25"
                        android:id="@+id/tv_normal_details_ticketsNum" />
                </LinearLayout>

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/darkgrey" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_details_star" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_icon_left5"
                        android:text="2500"
                        android:id="@+id/tv_normal_details_starNum" />
                </LinearLayout>

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/darkgrey" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RatingBar
                        android:id="@+id/ratingbar"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:numStars="5"
                        android:progressDrawable="@drawable/rating_yellow"
                        android:stepSize="1" />
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal">
                <TextView
                    android:padding="@dimen/margin_icon_left"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"

                    android:background="@color/white"
                    android:ellipsize="end"
                    android:text="以下内容由欢乐谷娱乐城提供，有如下几个特点的扑克牌游戏才能算得上是最基础类扑克游戏： 1、整副扑克同时参与游戏（可以不含大小王），也可以是两副或是更多； 2、先出完拿到的牌者获胜（拖拉机等游戏的游戏参与者出牌同时结束，故排除在外）； "
                    android:id="@+id/tv_normal_details_introduce" />
                <ImageButton
                    android:layout_marginRight="@dimen/margin_icon_left5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:id="@+id/ib_normal_details_drop"
                    android:src="@mipmap/img_down" />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>