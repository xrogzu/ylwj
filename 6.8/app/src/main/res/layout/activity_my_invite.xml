<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.administrator.elwj.MyAttentionActivity">

    <include layout="@layout/title_viewpager" />
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#FFFEBA00"
        android:focusable="true"
        android:focusableInTouchMode="true" />
    <RadioGroup
        android:id="@+id/rg_myinvite"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">


        <RadioButton
            android:id="@+id/rb_myinvite_parcipate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="活动邀请"
            android:textColor="@color/rg_finacial_selector" />


        <RadioButton
            android:id="@+id/rb_myinvite_recommend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:button="@null"
            android:gravity="center"
            android:text="联名发起人邀请"
            android:textColor="@color/rg_finacial_selector" />
    </RadioGroup>

    <TextView
        android:id="@+id/tv_bottom_line"
        android:layout_width="10dp"
        android:layout_height="2dp"
        android:background="#FF5460" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager_myinvite"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
