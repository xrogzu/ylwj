<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/confirm_popwindow_dismiss"
        android:background="@android:color/transparent"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:src="@mipmap/vote_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/confirm_popwindow_title"
        android:text="支付详情"
        android:textColor="@color/black"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/confirm_popwindow_line"
        android:layout_below="@id/confirm_popwindow_title"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <ImageView
        android:id="@+id/confirm_popwindow_face"
        android:layout_margin="10dp"
        android:layout_below="@id/confirm_popwindow_line"
        android:src="@mipmap/touxiang"
        android:scaleType="fitXY"
        android:background="@drawable/image_background"
        android:layout_width="60dp"
        android:layout_height="60dp"/>
    <TextView
        android:text="闽江路小米"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/confirm_popwindow_face"
        android:layout_alignTop="@id/confirm_popwindow_face"
        android:layout_marginTop="5dp"
        android:id="@+id/confirm_popwindow_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="账户总积分：1000000积分"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/confirm_popwindow_face"
        android:layout_below="@id/confirm_popwindow_name"
        android:id="@+id/confirm_popwindow_totalpoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/confirm_popwindow_line1"
        android:layout_below="@id/confirm_popwindow_face"
        android:layout_margin="5dp"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/confirm_popwindow_shouldpoint_tv"
        android:textSize="14sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@id/confirm_popwindow_line1"
        android:text="应付积分"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/confirm_popwindow_point_tv"
        android:textSize="14sp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/confirm_popwindow_line1"
        android:text="积分"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/confirm_popwindow_ownpoints"
        android:textSize="14sp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@id/confirm_popwindow_point_tv"
        android:textColor="@color/orangered"
        android:layout_below="@id/confirm_popwindow_line1"
        android:text="100000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/confirm_popwindow_line2"
        android:layout_below="@id/confirm_popwindow_shouldpoint_tv"
        android:layout_margin="5dp"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/confirm_popwindow_leavepoint_tv"
        android:textSize="14sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@id/confirm_popwindow_line2"
        android:text="剩余积分"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/confirm_popwindow_point_tv1"
        android:textSize="14sp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/confirm_popwindow_line2"
        android:text="积分"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/confirm_popwindow_leavepoint"
        android:textSize="14sp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@id/confirm_popwindow_point_tv"
        android:layout_below="@id/confirm_popwindow_line2"
        android:text="900000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/confirm_popwindow_line3"
        android:layout_below="@id/confirm_popwindow_leavepoint_tv"
        android:layout_margin="5dp"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/confirm_popwindow_confirmbtn"
        android:layout_alignParentBottom="true"
        android:text="@string/confirm_popwindow_btn"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:padding="15dp"
        android:gravity="center"
        android:background="@color/orangered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>