<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="10dp"
    android:background="@drawable/view_yuan"
    android:orientation="vertical">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/iv_recommend"
        android:scaleType="fitXY"
        android:id="@+id/iv_recommend_item"
        android:layout_margin="5dp"/>
    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/tv_recommend_itemtitle"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/iv_recommend_item"
        android:textColor="#000"
        android:text="监管互联网金融可借鉴负面清单制"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_recommend_item"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_recommend_itemcomment"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textColor="#C3C4C6"
        android:textSize="13sp"
        android:text="12"
        android:layout_alignBottom="@+id/iv_recommend_item"/>
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@mipmap/comment_icon"
        android:id="@+id/iv_recommend_message"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/tv_recommend_itemcomment"
        android:layout_alignBottom="@+id/iv_recommend_item"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_recommend_createtime"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:textColor="#C3C4C6"
        android:textSize="13sp"
        android:text="12"
        android:layout_alignBottom="@+id/iv_recommend_item"/>
</RelativeLayout>