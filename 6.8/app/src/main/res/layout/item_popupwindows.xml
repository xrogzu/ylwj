<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/bg_transparent" >

    <LinearLayout
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ll_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/circle_pop"
        android:orientation="vertical" >



        <android.support.v7.widget.CardView
            android:id="@+id/item_popupwindows_camera"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="5dp"
            android:gravity="center"
            android:clickable="true"
            android:layout_marginBottom="@dimen/card_view_distance"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_margin="@dimen/card_view">
            >
            <Button
                android:id="@+id/btn_popupwindows_camera"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white"
                android:textColor="#585858"
                android:textSize="18sp"
                android:text="拍照"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:clickable="false"
                />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="5dp"
            android:gravity="center"
            android:clickable="true"
            android:layout_marginBottom="@dimen/card_view_distance"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_margin="@dimen/card_view">
            >
            <Button
                android:id="@+id/item_popupwindows_Photo"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white"
                android:textColor="#585858"
                android:textSize="18sp"
                android:text="从相册中选取"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:clickable="false"
                />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            card_view:cardPreventCornerOverlap="true"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="5dp"
            android:gravity="center"
            android:layout_marginBottom="@dimen/card_view_distance"
            android:id="@+id/cardview_2"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_margin="@dimen/card_view"
             >
        <Button
            android:id="@+id/item_popupwindows_cancel"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:clickable="false"
            android:background="@color/white"
            android:textColor="#585858"
            android:textSize="18sp"
            android:text="取消"
            android:layout_margin="15dp"
            android:layout_gravity="center"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</RelativeLayout>