<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffe8e8e8"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/grey"
        android:id="@+id/title">
        <ImageView
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/reback"
            android:padding="10dp"
            android:background="#00000000"
            android:id="@+id/ib_back"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hot_product_title"
            android:textSize="@dimen/text_title"
            android:text="精致生活"
            android:layout_centerInParent="true"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#FFFEBA00"
            android:focusable="true"
            android:focusableInTouchMode="true" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:background="#E8E8E8"/>
    <com.library.listview.XListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="12px"
        android:divider="#ffe8e8e8"
        android:id="@+id/list_financalnon"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_below="@+id/title"/>

</RelativeLayout>