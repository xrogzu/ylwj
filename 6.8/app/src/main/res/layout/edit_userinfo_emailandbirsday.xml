<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp">
        <TextView
            android:text="生日"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/edit_userinfo_birsday_ib"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/next_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_toLeftOf="@id/edit_userinfo_birsday_ib"
            android:id="@+id/edit_userinfo_birsday"
            android:text="1990-01-10"
            android:padding="10dp"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:gravity="right"
            android:layout_width="120dp"
            android:layout_height="40dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp">
        <TextView
            android:text="邮箱"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/edit_userinfo_email_ib"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/next_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_toLeftOf="@id/edit_userinfo_email_ib"
            android:id="@+id/edit_userinfo_email"
            android:text="xiaomi@qq.com"
            android:padding="10dp"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:gravity="right"
            android:background="@null"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>