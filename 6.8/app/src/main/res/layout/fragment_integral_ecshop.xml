<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_integral" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/darkgrey" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@mipmap/jingzhi_title" />

    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey"
        android:clickable="false">

        <ScrollView
            android:id="@+id/act_solution_1_sv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:visibility="invisible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title"
                android:orientation="vertical">

                <include layout="@layout/banner_adhead" />

                <LinearLayout
                    android:id="@+id/head_linearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:visibility="invisible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="0"
                            android:src="@mipmap/market_icon_01" />

                        <TextView
                            android:id="@+id/tv_favorable"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:gravity="center_vertical"
                            android:text="@string/favorable"

                            />
                    </LinearLayout>


                    <TextView
                        android:layout_width="1px"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:background="@color/darkgrey" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="0"
                            android:src="@mipmap/market_icon_02" />

                        <TextView
                            android:id="@+id/tv_integral_exchange"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:gravity="center_vertical"
                            android:text="@string/integral_exchange" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="1px"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:background="@color/darkgrey" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="0"
                            android:src="@mipmap/market_icon_03" />

                        <TextView
                            android:id="@+id/tv_shop"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:gravity="center_vertical"
                            android:text="@string/shop" />
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/ecshop_imageview_pic01"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/pic01"
                    android:visibility="invisible" />

                <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1px"-->
                <!--android:background="@color/darkgrey" />-->

                <com.library.listview.XListView
                    android:id="@+id/listView_integral"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/bg_list"
                    android:divider="@color/bg_list"
                    android:dividerHeight="10dp"
                    android:scrollbars="none" />

                <LinearLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_ad_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="2dp"
                        android:src="@mipmap/pic15"
                        android:visibility="gone" />
                </LinearLayout>


                <ImageView
                    android:id="@+id/iv_ad"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true" />
            </LinearLayout>


        </ScrollView>

        <LinearLayout
            android:id="@+id/jing_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="0"
                    android:src="@mipmap/market_icon_01"

                    />

                <TextView
                    android:id="@+id/jing_favorable"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:text="@string/favorable"

                    />
            </LinearLayout>


            <TextView
                android:layout_width="1px"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:background="@color/darkgrey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="0"
                    android:src="@mipmap/market_icon_02" />

                <TextView
                    android:id="@+id/jing_integral_exchange"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:text="@string/integral_exchange" />
            </LinearLayout>

            <TextView
                android:layout_width="1px"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:background="@color/darkgrey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="0"
                    android:src="@mipmap/market_icon_03" />

                <TextView
                    android:id="@+id/jing_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:text="@string/shop" />
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>
</LinearLayout>