<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <ImageView
        android:id="@+id/homepage_item_faceimage"
        android:src="@mipmap/touxiang"
        android:layout_margin="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <TextView
        android:id="@+id/homepage_item_nickname"
        android:text="闽江路小米"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_alignTop="@id/homepage_item_faceimage"
        android:layout_toRightOf="@id/homepage_item_faceimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/homepage_item_location"
        android:text="青岛市市南区"
        android:textColor="@color/blue_light"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@mipmap/shenbian_icon_07"
        android:drawablePadding="3dp"
        android:layout_toRightOf="@id/homepage_item_faceimage"
        android:layout_below="@id/homepage_item_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/homepage_item_time"
        android:text="1小时前"
        android:textSize="14sp"
        android:textColor="@color/gray"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <include
        android:id="@+id/homepage_contentlist_item_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/homepage_item_faceimage"
        layout="@layout/homepage_contentlist_item_content"/>

</RelativeLayout>