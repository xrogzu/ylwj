<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/headline" />


        <TextView
            android:id="@+id/id_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ib_back"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@mipmap/publish_in"
            android:visibility="gone" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#FFFEBA00"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <EditText
        android:id="@+id/id_content"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:maxLength="140"
        android:background="@null"
        android:gravity="left"
        android:hint="分享新鲜事..."
        android:visibility="gone" />

    <GridView
        android:id="@+id/noScrollgridview"
        android:layout_width="290dp"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:horizontalSpacing="3dp"
        android:numColumns="4"
        android:scrollbars="none"
        android:verticalSpacing="5dp"></GridView>

    <TextView
        android:id="@+id/id_1"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="2dp"
        android:background="@color/darkgray"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/id_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_icon_left"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_review"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_icon_left"
            android:layout_weight="1"
            android:background="@color/darkgrey"
            android:text="上一步"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/bt_nextstep"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_icon_left"
            android:layout_marginRight="@dimen/margin_icon_left"
            android:layout_weight="1"
            android:background="@color/orangered"
            android:text="下一步"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>