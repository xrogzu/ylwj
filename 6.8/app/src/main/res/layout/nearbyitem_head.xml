<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_marginTop="3dp"
        android:layout_marginLeft="@dimen/margin_icon_left"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:clickable="true"
        android:id="@+id/iv_nearby_head"
        android:src="@mipmap/touxiang"
        android:layout_margin="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_nearby_name"
        android:layout_toRightOf="@+id/iv_nearby_head"
        android:layout_alignTop="@+id/iv_nearby_head"
        android:textColor="@color/black"

        android:textSize="16sp"
        android:text="闽江路小米"
      />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1小时前"
        android:id="@+id/tv_nearby_time"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/tv_nearby_name"
        android:layout_marginRight="3dp"
        android:textColor="#808080"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/iv_nearby_head"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="主要看气质"
        android:id="@+id/tv_nearby_introduce"

      />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_below="@+id/tv_nearby_name"
        android:layout_toRightOf="@+id/iv_nearby_head"
        android:layout_marginTop="2dp"
        android:layout_alignLeft="@+id/tv_nearby_name">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:id="@+id/iv_nearby_map"
            android:src="@mipmap/shenbian_icon_07"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="青岛市市南区"
            android:gravity="center"
            android:textSize="12sp"
            android:id="@+id/tv_nearby_location"
            android:textColor="#507DAF"
            android:singleLine="true"
            />
    </LinearLayout>



</RelativeLayout>